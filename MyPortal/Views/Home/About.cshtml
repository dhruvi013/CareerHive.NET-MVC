@{
    ViewBag.Title = "About";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">


    <h2 id="title">@ViewBag.Title</h2>
    <h3>@ViewBag.Message</h3>
