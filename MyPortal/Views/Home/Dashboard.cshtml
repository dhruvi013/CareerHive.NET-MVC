@{
    ViewBag.Title = "Dashboard";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="welcome-banner">
    <h1>Welcome to the Dashboard</h1>
</div>

<div class="container">
    <h2>Job Positions</h2>
    <div class="job-cards">
        @foreach (var job in ViewBag.JobListings)
        {
            <div class="job-card">
                <div class="job-header">
                    <h3>@job.Title</h3>
                    <span class="location">@job.Location</span>
                </div>
                <div class="company-info">
                    <p><strong>Company:</strong> @job.Company</p>
                    <p><strong>Salary:</strong> $60,000/year (example)</p>
                </div>
                <div class="job-description">
                    <p>Outlier AI is looking for talented individuals to join their team.</p>
                </div>
                <div class="job-actions">
                    <a href="#" class="apply-btn">Apply Now</a>
                </div>
            </div>
        }
    </div>
</div>

<style>
    /* General Styles */
    body {
        font-family: 'Arial', sans-serif;
        background-color: #f5f7fa;
        color: #333;
        margin: 0;
        padding: 0;
    }

    .welcome-banner {
        background-color: #007bff;
        color: white;
        text-align: center;
        padding: 20px;
        border-radius: 10px;
        margin: 20px auto;
        max-width: 1200px;
    }

    .container {
        background: white;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        margin: 20px auto;
        max-width: 1200px;
    }

    h2 {
        color: #333;
        margin-bottom: 20px;
        text-align: center;
    }

    .job-cards {
        display: grid;
        grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
        gap: 20px;
    }

    .job-card {
        background-color: #fff;
        border-radius: 10px;
        box-shadow: 0 4px 10px rgba(0, 0, 0, 0.1);
        padding: 20px;
        transition: transform 0.3s ease, box-shadow 0.3s ease;
    }

        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 8px 15px rgba(0, 0, 0, 0.2);
        }

    .job-header {
        display: flex;
        justify-content: space-between;
        align-items: center;
        margin-bottom: 15px;
    }

        .job-header h3 {
            font-size: 18px;
            color: #007bff;
            margin: 0;
        }

        .job-header .location {
            font-size: 14px;
            color: #555;
        }

    .company-info {
        margin: 10px 0;
    }

        .company-info p {
            margin: 5px 0;
            font-size: 14px;
        }

    .job-description {
        margin: 10px 0;
        font-size: 14px;
        color: #555;
    }

    .job-actions {
        text-align: center;
        margin-top: 10px;
    }

    .apply-btn {
        display: inline-block;
        padding: 10px 15px;
        background-color: #007bff;
        color: white;
        text-decoration: none;
        border-radius: 5px;
        transition: background-color 0.3s ease;
    }

        .apply-btn:hover {
            background-color: #0056b3;
        }
</style>
